<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Ranking de Propuestas Más Votadas</h2>
                </div>
                <div class="card-body">
                    <% if (proposals && proposals.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Título</th>
                                        <th scope="col">Apoyos</th>
                                        <th scope="col">Centro</th>
                                        <th scope="col">Afiliación</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% proposals.forEach((proposal, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= proposal.title %></td>
                                            <td>
                                                <span class="badge badge-success">
                                                    <%= proposal.supporters %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (proposal.centres && proposal.centres.length > 0) { %>
                                                    <%= proposal.centres.join(', ') %>
                                                <% } else { %>
                                                    <span class="text-muted">No especificado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (proposal.affiliations && proposal.affiliations.length > 0) { %>
                                                    <%= proposal.affiliations.join(', ') %>
                                                <% } else { %>
                                                    <span class="text-muted">No especificado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(proposal.createdAt).toLocaleDateString('es-ES') %>
                                            </td>
                                            <td>
                                                <a href="/?proposal=<%= proposal._id %>" class="btn btn-sm btn-info" target="_blank">
                                                    <i class="fas fa-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <p class="text-muted">Total de propuestas: <%= proposals.length %></p>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No hay propuestas publicadas en este momento.
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Gráfico de barras para visualización -->
            <% if (proposals && proposals.length > 0) { %>
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Visualización de Apoyos</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="proposalsChart" width="400" height="200"></canvas>
                    </div>
                </div>
                
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const ctx = document.getElementById('proposalsChart').getContext('2d');
                        
                        // Tomar solo las 10 propuestas más votadas para el gráfico
                        const topProposals = JSON.stringify(proposals.slice(0, 10));
                        
                        const chart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: topProposals.map(p => {
                                    // Acortar el título si es muy largo
                                    return p.title.length > 20 ? p.title.substring(0, 20) + '...' : p.title;
                                }),
                                datasets: [{
                                    label: 'Número de Apoyos',
                                    data: topProposals.map(p => p.supporters),
                                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                    borderColor: 'rgba(54, 162, 235, 1)',
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                responsive: true,
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        title: {
                                            display: true,
                                            text: 'Apoyos'
                                        }
                                    },
                                    x: {
                                        title: {
                                            display: true,
                                            text: 'Propuestas'
                                        }
                                    }
                                },
                                plugins: {
                                    legend: {
                                        display: true,
                                        position: 'top'
                                    },
                                    title: {
                                        display: true,
                                        text: 'Top 10 Propuestas más Votadas'
                                    }
                                }
                            }
                        });
                    });
                </script>
            <% } %>
        </div>
    </div>
</div>
