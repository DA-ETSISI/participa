<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="mb-0 text-center">Ranking de Propuestas Más Votadas</h2>
                </div>
                <div class="card-body">
                    <% if (proposals && proposals.length> 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Título</th>
                                        <th scope="col">Apoyos</th>
                                        <th scope="col">Centro</th>
                                        <th scope="col">Afiliación</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% proposals.forEach((proposal, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= proposal.title %>
                                            </td>
                                            <td>
                                                <%= proposal.supporters %>
                                            </td>
                                            <td>
                                                <% if (proposal.centres && proposal.centres.length> 0) { %>
                                                    <%= proposal.centres.join(', ') %>
                                                <% } else { %>
                                                    <span class="text-muted">No especificado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (proposal.affiliations && proposal.affiliations.length > 0) { %>
                                                    <%= proposal.affiliations.join(' , ') %>
                                                <% } else { %>
                                                    <span class="text-muted">No especificado</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(proposal.createdAt).toLocaleDateString('es-ES') %>
                                            </td>
                                            <td>
                                                <a href="/?proposal=<%= proposal._id %>" class="btn btn-sm btn-info"
                                                    target="_blank">
                                                    <i class="fas fa-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <p class="text-muted">Total de propuestas: <%= proposals.length %>
                            </p>
                        </div>
                        <% } else { %>
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle"></i> No hay propuestas publicadas en este momento.
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
    </div>
</div>