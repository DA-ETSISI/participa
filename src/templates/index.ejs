<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center">
        <h1>Propuestas para el Rector</h1>
        <p class="lead">Comparte tus ideas para la mejora de nuestra universidad.</p>
        <button class="btn btn-primary" hx-get="/api/proposals/draft-form" hx-target="#proposalDraftModal"
            hx-on::after-request="$('#proposalDraftModal').modal('show');">Aportar
            Propuesta</button>
    </div>

    <!-- Proposal Draft Modal -->
    <div class="modal modal-lg fade" id="proposalDraftModal" tabindex="-1" aria-labelledby="proposalModalLabel"
        aria-hidden="true">
    </div>

    <!-- Modal para mostrar detalles de la propuesta -->
    <div class="modal fade" id="proposalDetailModal" tabindex="-1" aria-labelledby="proposalDetailModalLabel"
        aria-hidden="true">
    </div>

    <!-- Search and Filter Section -->
    <div class="mt-5">
        <form hx-get="/api/proposals"
            hx-trigger="input delay:500ms from: #searchInput, change delay:500ms from: #filterCategory"
            hx-target="#proposalsContainer" hx-params="*" hx-indicator="#searchIndicator" onkeydown="if (event.keyCode === 13) event.preventDefault();">
            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchInput" name="search"
                        placeholder="Buscar propuestas por título o palabras clave">
                </div>
                <div class="col-md-4">
                    <select id="filterCategory" name="categories" class="selectpicker" multiple
                        data-selected-text-format="count > 2" data-style="form-control" data-actions-box="true"
                        data-live-search="true" data-live-search-normalize="true" data-width="100%"
                        title="Filtrar por categoría">
                        <option value="Educación">Educación</option>
                        <option value="Infraestructuras">Infraestructuras</option>
                        <option value="Servicios">Servicios</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" id="clearFilters" class="btn btn-secondary w-100"
                        onclick="$('#searchInput').val(''); $('#filterCategory').selectpicker('deselectAll')">Limpiar</button>
                </div>
        </form>
    </div>

    <!-- Search indicator -->
    <div class="d-flex justify-content-center">
        <div id="searchIndicator" class="spinner-border text-primary" style="width: 5rem; height: 5rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Proposals Section -->
    <div id="proposalsContainer" class="row gy-4 mb-5">
        <%- include('fragments/proposalCards', { proposals }) %>
    </div>
</div>