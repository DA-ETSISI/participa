<div class="container mt-5">
    <!-- Botón para generar una nueva propuesta -->
    <button id="generateNewProposal" class="btn btn-primary mb-4">Generar Nueva Propuesta</button>

    <!-- Proposal Details Modal -->
    <div class="modal fade" id="proposalDetailModal" tabindex="-1" aria-labelledby="proposalDetailModalLabel"
        aria-hidden="true">
    </div>

    <!-- Search and Filter Section -->
    <div class="mt-5">
        <form hx-get="/api/admin/proposals"
            hx-trigger="input delay:500ms from: #searchInput, change delay:500ms from: #filterCategory"
            hx-target="#adminProposalsTableBody" hx-params="*" hx-indicator="#searchIndicator"
            onkeydown="if (event.keyCode === 13) event.preventDefault();">
            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchInput" name="search"
                        placeholder="Buscar propuestas por título o palabras clave">
                </div>
                <div class="col-md-4">
                    <select id="filterCategory" name="categories" class="selectpicker" multiple
                        data-selected-text-format="count > 2" data-style="form-control" data-actions-box="true"
                        data-live-search="true" data-live-search-normalize="true" data-width="100%"
                        title="Filtrar por categoría">
                        <option value="Educación">Educación</option>
                        <option value="Infraestructuras">Infraestructuras</option>
                        <option value="Servicios">Servicios</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" id="clearFilters" class="btn btn-secondary w-100"
                        onclick="$('#searchInput').val(''); $('#filterCategory').selectpicker('deselectAll')">Limpiar</button>
                </div>
        </form>
    </div>

    <!-- Tabla de propuestas -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Marcar</th>
                    <th scope="col">Título</th>
                    <th scope="col">Categorías</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody id="adminProposalsTableBody">
                <%- include('fragments/admin/proposalRows', { proposals }) %>
                    <!-- Search indicator -->
                    <div class="d-flex justify-content-center">
                        <div id="searchIndicator" class="spinner-border text-primary" style="width: 5rem; height: 5rem;"
                            role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal para mostrar detalles de la propuesta -->
<div class="modal fade" id="adminProposalDetailModal" tabindex="-1" aria-labelledby="adminProposalDetailModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adminProposalDetailModalLabel">Detalles de la Propuesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 id="adminProposalTitle"></h4>
                <p><span class="badge bg-primary" id="adminProposalCategory"></span></p>
                <p id="adminProposalDescription"></p>
                <p><strong>Apoyos:</strong> <span id="adminProposalSupports"></span></p>
                <p><strong>Candidatos que apoyan:</strong> <span id="adminProposalSupportingCandidates"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para generar nueva propuesta -->
<div class="modal fade" id="createProposalModal" tabindex="-1" aria-labelledby="createProposalModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createProposalModalLabel">Generar Nueva Propuesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createProposalForm">
                    <div class="mb-3">
                        <label for="newProposalTitle" class="form-label">Título</label>
                        <input type="text" class="form-control" id="newProposalTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="newProposalCategory" class="form-label">Categoría</label>
                        <select id="newProposalCategory" class="form-select" required>
                            <option value="Educación">Educación</option>
                            <option value="Infraestructura">Infraestructura</option>
                            <option value="Servicios">Servicios</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="newProposalDescription" class="form-label">Descripción</label>
                        <textarea class="form-control" id="newProposalDescription" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Propuesta</button>
                </form>
            </div>
        </div>
    </div>
</div>